def rot_matrix(theta):
    theta = np.deg2rad(theta)
    rot_mat = np.array([
        [np.cos(theta), -np.sin(theta)],
        [np.sin(theta), np.cos(theta)]
    ])
    return rot_mat


rotate = rot_matrix(15)
plot_quiv(B)
scale = 0.5*np.eye(2)
